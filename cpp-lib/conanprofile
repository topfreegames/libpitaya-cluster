include(default)
# Generic conanprofile for multi-platform builds
# Platform-specific settings are handled in the workflow

[settings]
compiler.cppstd=gnu17

[options]
*:shared=False
*:fPIC=True
protobuf/*:debug_suffix=False
openssl/*:shared=False
cpprestsdk/*:with_websockets=False

[conf]
tools.cmake.cmake_layout:build_folder_vars=['settings.os', 'settings.arch', 'options.macosx_bundle', 'settings.build_type']
tools.build:skip_test=True
tools.build:parallel=True
tools.build:jobs=4
tools.download:parallel=True
tools.download:parallel_download=8
